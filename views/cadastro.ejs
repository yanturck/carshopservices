<%- include('./partials/header.ejs'); %>
<main class="flex-fill">
    <div class="container">

        <div class="row justify-content-center">
            <form action="/confirme-cadastro" method="post" class="col-sm-10 col-md-8 col-lg-6">
                <h4>Cadastrar-se</h4>
                <small>Preencha corretamente seus dados</small>
                <br>

                <div class="form-floating mb-3 mt-3">
                    <input class="form-control" type="text" name="nome" id="txtnome" placeholder=" " autofocus />
                    <label for="txtNome">Nome</label>
                </div>

                <div class="form-floating mb-3 col-md-6 col-xl-4">
                    <input class="form-control" type="text" id="txtNumero" name="telefone" placeholder=" " />
                    <label for="txtNumero">Telefone</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" id="email" class="form-control" name="email" placeholder="" autofocus>
                    <label for="email">E-mail</label>
                </div>

                <div class="form-floating mb-3 col-md-6 col-xl-6">
                    <input class="form-control" type="password" name="senha" id="txtsenha" placeholder=" " />
                    <label for="txtCPF">Senha</label>
                </div>

                <div class="form-floating mb-3 col-md-6 col-lg-4">
                    <textarea class="form-control text-muted bg-light texto" name="endereco" placeholder=""
                        style="min-height: 120px; min-width: 420px;">
                            Preencha corretamente o seu endereço
                                </textarea>
                </div>

                <div class="form-floating mb-3 col-md-6 col-xl-4">
                    <input class="form-control" type="text" id="txtNumero" name="numero" placeholder=" " />
                    <label for="txtNumero">Número</label>
                </div>

                <div class="form-floating mb-3 col-md-6 col-xl-4">
                    <input class="form-control" type="text" id="txtComplemento" name="complemento" placeholder=" " />
                    <label for="txtComplemento">Complemento</label>
                </div>

                <input type="submit" class="btn btn-md btn-success" value="Efetuar Cadastro"></input>
                <br>
                <p class="mt-3">Ainda não é Cadastrado ? <a href="/cadastro">Clique aqui</a> e aproveite o sistema</p>
            </form>
        </div>

    </div>
</main>

<%- include('./partials/footer.ejs'); %>