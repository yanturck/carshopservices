<%- include('./partials/header.ejs'); %>
<main class="flex-fill">
    <div class="container">

        <div class="row justify-content-center">
            <form action="/user/autenticar" method="post" class="col-sm-10 col-md-8 col-lg-6">
                <h2>Login</h2>
                <div class="form-floating mb-3">
                    <input type="email" id="email" name="txtEmail" class="form-control form-control-sm"
                        placeholder="Informe o seu e-mail" autofocus>
                    <label for="txtemail">E-mail</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" id="senha" name="txtSenha" class="form-control" placeholder="" autofocus>
                    <label for="txtsenha">Senha</label>
                </div>

                <div class="form-check  mb-3">
                    <input type="checkbox" id="senha" class="form-check-input" value="" id="checklembrar">
                    <label for="checklembrar" class="form-check-label">Lembrar acesso</label>
                </div>

                <input type="submit" class="btn btn-md btn-success mb-3" value="Entrar"></input>
                <br>
                
                <br>
                <small class="mt-3">Ainda não é Cadastrado ? <a href="/cadastro">Clique aqui</a> e aproveite o
                    sistema</small>
                <br>
                <small class="mt-3">Esqueceu a senha ? <a href="/recuperar-senha">Clique aqui</a> para
                    recuperá-la</small>

            </form>
        </div>

    </div>
</main>

<%- include('./partials/footer.ejs'); %>